<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="type_payment_view_form">
            <field name="name">type.payment.view.form</field>
            <field name="model">type.payment</field>
            <field name="arch" type="xml">
                <form string="Type Payment Form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" />
                                <field name="apply_tax_credit_card" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="type_payment_view_list">
            <field name="name">type.payment.view.list</field>
            <field name="model">type.payment</field>
            <field name="arch" type="xml">
                <tree string="Type Payment List">
                    <field name="name" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="type_payment_view_search">
            <field name="name">type.payment.view.search</field>
            <field name="model">type.payment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
